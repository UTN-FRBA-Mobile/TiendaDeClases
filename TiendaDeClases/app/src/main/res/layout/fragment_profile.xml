<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home.ProfileFragment">


    <ImageView
        android:id="@+id/profile_pic_view"
        android:layout_width="145dp"
        android:layout_height="153dp"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_pic_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="UserName"
        android:textAlignment="center" />

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="382dp"
        android:layout_below="@id/user_username"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_first_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <EditText
            android:id="@+id/user_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textPersonName" />

        <TextView
            android:id="@+id/user_last_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_birthday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:gravity="right"
                android:text="Fecha de nacimiento"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/user_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="0dp"
                android:gravity="left"
                android:hint="Dia seleccionado"
                android:textAlignment="gravity"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/save_changes"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="41dp"
            android:text="Guardar Cambios" />

        <Button
            android:id="@+id/change_password"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/save_changes"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="41dp"
            android:text="Cambiar ContraseÃ±a" />

    </LinearLayout>

</RelativeLayout>