<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/payedClasses"
    style="@style/class_item">

    <TextView
        android:id="@+id/payedClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Nombre de la clase" />

    <Button
        android:id="@+id/scheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:text="@string/classes_scheduleButton" />
    <TextView android:id="@+id/payedClassDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payedClassName"
        tools:text="Fecha"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/datePriceSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/payedClassDate"
        android:layout_toEndOf="@id/payedClassDate"
        android:text="@string/classes_datePriceSeparator" />
    <TextView android:id="@+id/payedClassPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/payedClassDate"
        android:layout_toEndOf="@id/datePriceSeparator"
        tools:text="Precio" />
    <TextView android:id="@+id/payedClassDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payedClassDate"
        tools:text="DescripciÃ³n de la clase" />
</RelativeLayout>