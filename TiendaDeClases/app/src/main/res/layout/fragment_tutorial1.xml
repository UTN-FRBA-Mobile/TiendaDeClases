<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutorial1Fragment">

    <!-- TODO: Update blank fragment layout -->

    <HorizontalScrollView
        android:id="@+id/HorizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layoutDirection="ltr"
        android:layoutMode="opticalBounds"
        android:transitionGroup="true">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="385dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Tutorial1_Text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:lines="3"
                    android:text="@string/tutorial1_text"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/Tutorial1_Text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="4"
                    android:text="@string/tutorial1_text2"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Tutorial2_Text"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="4"
                android:text="@string/tutorial2_text"
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/Tutorial3_Text"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="4"
                android:text="@string/tutorial3_text"
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="385dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Tutorial4_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="4"
                    android:text="@string/tutorial4_text"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/Tutorial4_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="150dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:requiresFadingEdge="horizontal|vertical"
                    android:text="@string/tutorial4_button"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>