<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/class_item">

    <TextView
        android:id="@+id/className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Nombre de la clase" />
    <TextView android:id="@+id/classDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/className"
        tools:text="Fecha" />
    <TextView
        android:id="@+id/datePriceSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/classDate"
        android:layout_toEndOf="@id/classDate"
        android:text="@string/classes_datePriceSeparator" />
    <TextView android:id="@+id/classPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/classDate"
        android:layout_toEndOf="@id/datePriceSeparator"
        tools:text="Precio"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <TextView android:id="@+id/classDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classDate"
        tools:text="DescripciÃ³n de la clase" />
</RelativeLayout>