<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_frame">


    <ImageView
        android:id="@+id/profile_pic_view"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_pic_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-34dp"
        android:ems="10"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="453dp"
        android:layout_below="@+id/user_username"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_first_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name" />

        <EditText
            android:id="@+id/user_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textPersonName" />

        <TextView
            android:id="@+id/user_last_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name" />

        <EditText
            android:id="@+id/user_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textPersonName" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <TextView
                android:id="@+id/user_birthday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="9dp"
                android:text="@string/birthday"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/user_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="3dp"
                android:hint="@string/selected_date"
                android:textAlignment="gravity"
                android:textSize="15sp" />

            <Button
                android:id="@+id/change_location"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="39dp"
                android:text="@string/change_location" />

            <TextView
                android:id="@+id/user_location"
                android:layout_width="158dp"
                android:layout_height="77dp"
                android:layout_alignStart="@+id/user_birthday"
                android:layout_alignBottom="@+id/change_location"
                android:layout_marginStart="-48dp"
                android:layout_marginBottom="-30dp" />


        </RelativeLayout>


        <Button
            android:id="@+id/save_changes"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="41dp"
            android:text="@string/save_changes" />

        <Button
            android:id="@+id/change_password"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="41dp"
            android:text="@string/change_password" />

    </LinearLayout>

</RelativeLayout>